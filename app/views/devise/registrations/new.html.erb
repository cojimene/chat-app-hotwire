<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10 text-white text-center">
  <section class="flex flex-col items-center gap-1">
    <%= image_tag 'chat-icon', width: 100 %>
    <h1 class="font-bold text-4xl my-4">Chat App - Ruby on Rails 7</h1>
    <p class="font-semibold">This is the chat app with RoR</p>
  </section>

  <section class="flex flex-col items-center">
    <h2 class="font-bold text-2xl mb-5">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'flex flex-col') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :email, class: 'font-semibold text-sm w-24' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-sm font-medium rounded w-full text-black' %>
      </div>

      <div class="flex flex-col my-5 justify-center">
        <div class="flex gap-1 items-center w-96">
          <%= f.label :password, class: 'font-semibold text-sm w-24' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'text-sm font-medium rounded w-full text-black' %>
        </div>

        <div class="flex w-full items-center justify-end">
          <% if @minimum_password_length %>
            <em class="font-semibold text-sm">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password_confirmation, class: 'font-semibold text-sm w-24' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-sm font-medium rounded w-full text-black' %>
      </div>

      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Sign up", class: 'bg-green-800 rounded p-3 font-semibold' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</main>
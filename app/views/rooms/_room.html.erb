<%= turbo_frame_tag room do %>
  <div class="text-white border-white border rounded flex justify-between px-1 py-2">
    <%= link_to room_path(room), class: 'font-semibold', data: {turbo_frame: 'room_details'} do %>
      <%= room.name %>
    <% end %>

    <div class="flex items-center gap-2">
      <%= link_to 'Edit', edit_room_path(room), class: 'text-sm' %>

      <%= button_to 'Remove', room_path(room),
        class: 'text-sm leading-normal', method: :delete,
        data: {turbo_confirm: 'Are you sure?'} %>
    </div>
  </div>
<% end %>

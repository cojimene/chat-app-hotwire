<%= form_with model: room, class: "flex flex-col my-3 w-full",
  data: {controller: 'form', action: 'submit->form#resetComponent'} do |form| %>

  <% if room.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3 errors">
      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col mb-2 justify-center">
    <%= form.label :name, class: 'text-white font-semibold text-sm' %>
    <%= form.text_field :name, class: "w-full rounded border border-gray-200 font-semibold text-xs" %>
  </div>

  <div class="flex justify-between">
    <%= form.submit class: "cursor-pointer p-2 text-sm font-semibold bg-green-600 rounded text-white" %>
    <%= link_to 'Cancel', :back, class: 'cursor-pointer p-2 text-sm font-semibold bg-red-600 rounded text-white' %>
  </div>
<% end %>
